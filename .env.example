# Database Configuration (REQUIRED - Change these defaults!)
MYSQL_HOST=localhost
MYSQL_USER=your_secure_db_user
MYSQL_PASSWORD=your_secure_db_password
MYSQL_DB=your_database_name

# Application Security Keys (REQUIRED - Generate strong random keys)
SECRET_KEY=your_very_long_random_secret_key_here_at_least_32_characters
CSRF_SECRET_KEY=another_different_random_key_here_at_least_32_characters
API_KEY=your_secure_api_key_here

# Admin Credentials (REQUIRED - Never use defaults in production)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_very_secure_admin_password

# Application Configuration
BASE_URL=https://yourdomain.com

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_ADDRESS=your_email@domain.com
EMAIL_PASSWORD=your_email_app_password
DEV_EMAIL=developer@domain.com

# SMS Configuration (Optional)
DEV_PHONE=+8801XXXXXXXXX
MADRASA_PHONE=+8801XXXXXXXXX

# reCAPTCHA Configuration (Optional but recommended for admin login)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# SSL/HTTPS Configuration (Production)
SESSION_SECURE=true

# Payment Gateway Configuration (Optional)
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASS=your_store_password

# Generate secure keys using Python:
# python -c "import secrets; print(secrets.token_urlsafe(32))"