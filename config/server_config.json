{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 1,
    "timeout": 60,
    "max_requests": 1000,
    "max_requests_jitter": 50
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "rotation": "1 day",
    "retention": "30 days",
    "max_size": "10MB"
  },
  "monitoring": {
    "health_check_interval": 10,
    "max_memory_usage": "512MB",
    "max_cpu_usage": 80,
    "auto_restart": true,
    "restart_threshold": 3
  },
  "security": {
    "bind_host": "0.0.0.0",
    "allowed_hosts": [
      "*"
    ],
    "rate_limit": 100,
    "timeout": 30
  }
}